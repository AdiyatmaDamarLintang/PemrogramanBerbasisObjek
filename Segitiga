package object;

import javax.swing.JOptionPane;

/**
 *
 * @author LENOVO
 */
public class segitiga {

    Double alas, tinggi, miring, luas, keliling;

    public segitiga() {
        this.alas = alas;
        this.tinggi = tinggi;
        this.miring = miring;
    }

    public void luas(Double alas, Double tinggi) {
        luas = alas * tinggi / 2;
        JOptionPane.showMessageDialog(null, "luas segitiga anda: " + luas);
    }

    public void keliling(Double alas, Double tinggi, Double miring) {
        keliling = alas + miring + tinggi;
        JOptionPane.showMessageDialog(null, "Keliling segitiga anda: " + keliling);
    }
}
